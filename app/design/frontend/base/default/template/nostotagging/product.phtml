<?php
/**
 * @var $this           Nosto_Tagging_Block_Product
 * @var $helper         Nosto_Tagging_Helper_Data
 * @var $priceFormatter NostoFormatterPrice
 * @var $dateFormatter  NostoFormatterDate
 */
$product = $this->getMetaProduct();
$helper = Mage::helper('nosto_tagging');
$priceFormatter = Nosto::formatter('price');
$dateFormatter = Nosto::formatter('date');
$priceFormat = new NostoPriceFormat(2, '.', '');
$dateFormat = new NostoDateFormat(NostoDateFormat::YMD);
$store = Mage::app()->getStore();
$priceHelper = Mage::helper('nosto_tagging/price');
?>

<!-- Nosto Product Tagging -->
<div class="nosto_product" style="display:none">
    <span class="url"><?php echo $product->getUrl(); ?></span>
    <span class="product_id"><?php echo $helper->escapeHtml($product->getProductId()); ?></span>
    <span class="name"><?php echo $helper->escapeHtml($product->getName()); ?></span>
    <span class="image_url"><?php echo $product->getImageUrl(); ?></span>
    <?php if ($product->getPrice()): ?>
        <span class="price"><?php echo $priceFormatter->format($product->getPrice(), $priceFormat); ?></span>
    <?php endif; ?>
    <?php if ($product->getCurrency()): ?>
        <span class="price_currency_code"><?php echo $helper->escapeHtml($product->getCurrency()->getCode()); ?></span>
    <?php endif; ?>
    <?php if ($product->getAvailability()): ?>
        <span class="availability"><?php echo $helper->escapeHtml($product->getAvailability()->getAvailability()); ?></span>
    <?php endif; ?>
    <?php foreach ($product->getCategories() as $category): ?>
        <span class="category"><?php echo $helper->escapeHtml($category); ?></span>
    <?php endforeach; ?>
    <?php if ($product->getFullDescription()): ?>
        <span class="description"><?php echo $helper->escapeHtml($product->getFullDescription()); ?></span>
    <?php endif; ?>
    <?php if ($product->getListPrice()): ?>
        <span class="list_price"><?php echo $priceFormatter->format($product->getListPrice(), $priceFormat); ?></span>
    <?php endif; ?>
    <?php if ($product->getBrand()): ?>
        <span class="brand"><?php echo $helper->escapeHtml($product->getBrand()); ?></span>
    <?php endif; ?>
    <?php foreach ($product->getTags() as $type => $tags): ?>
        <?php foreach ($tags as $tag): ?>
            <span class="<?php echo $helper->escapeQuotes($type); ?>"><?php echo $helper->escapeHtml($tag); ?></span>
        <?php endforeach; ?>
    <?php endforeach; ?>
    <?php if ($product->getDatePublished()): ?>
        <span class="date_published"><?php echo $dateFormatter->format($product->getDatePublished(), $dateFormat); ?></span>
    <?php endif; ?>
    <?php if ($helper->getStoreHasMultiCurrency()): ?>
        <?php if ($this->inclPriceVariations() && count($product->getPriceVariations()) > 0): ?>
            <span class="variation_id"><?php echo $helper->escapeHtml($product->getPriceVariationId()); ?></span>
            <?php foreach ($product->getPriceVariations() as $variation): ?>
                <div class="variation">
                    <span class="variation_id"><?php echo $helper->escapeHtml($variation->getId()->getId()); ?></span>
                    <span class="price_currency_code"><?php echo $helper->escapeHtml($variation->getCurrency()->getCode()); ?></span>
                    <span class="price"><?php echo $priceFormatter->format($variation->getPrice(), $priceFormat); ?></span>
                    <span class="list_price"><?php echo $priceFormatter->format($variation->getListPrice(), $priceFormat); ?></span>
                    <span class="availability"><?php echo $helper->escapeHtml($variation->getAvailability()->getAvailability()); ?></span>
                </div>
            <?php endforeach; ?>
        <?php endif; ?>
    <?php endif; ?>
</div>
<?php if ($this->getCurrentCategory()): ?>
    <div class="nosto_category" style="display:none"><?php echo $helper->escapeHtml($this->getCurrentCategory()); ?></div>
<?php endif; ?>