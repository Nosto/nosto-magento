/**
 * @var $this Nosto_Tagging_Block_Adminhtml_System_Config_Ajax_Button
 */
?>
<?php echo $this->getButtonHtml(); ?>
<script type="text/javascript">
    //<![CDATA[
    // Define the "Nosto" namespace if not already defined.
    if (typeof Nosto === "undefined") {
        var Nosto = {};
    }
    Nosto.<?php echo $this->getButtonOnClick(); ?> = function () {
        $("<?php echo $this->getButtonId(); ?>").addClassName("disabled");
        var showMessages = function(messages) {
            var html = "", type, msg;
            for (var i = 0, l = messages.length; i < l; i++) {
                type = messages[i].type;
                msg = messages[i].message;
                html += "<li class=\""+type+"-msg\"><ul><li>"+msg+"</li></ul></li>";
            }
            if (html !== "") {
                $("messages").update("<ul class=\"messages\">"+html+"</ul>");
            }
        };
        new Ajax.Request("<?php echo $this->getButtonUrl(); ?>", {
            method: "POST",
            onSuccess: function(transport) {
                var response = JSON.parse(transport.responseText);
                showMessages(response.data);
            },
            onFailure: function(transport) {
                showMessages([{"error": "There was an unknown error (Error "+transport.status+")."}]);
            },
            onComplete: function() {
                $("<?php echo $this->getButtonId(); ?>").removeClassName("disabled");
            }
        });
    };
    //]]>
</script>
