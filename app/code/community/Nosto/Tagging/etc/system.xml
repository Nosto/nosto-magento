<config>
    <sections>
        <nosto_tagging translate="label">
            <label>Nosto</label>
            <tab>service</tab>
            <sort_order>500</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general>
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>0</expanded>
                    <fields>
                        <direct_include translate="label">
                            <label>Use Direct Include (Beta)</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </direct_include>
                    </fields>
                </general>
                <account_settings translate="label">
                    <label>Account Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>0</expanded>
                    <fields>
                        <update translate="label">
                            <label>Update Account</label>
                            <comment>Synchronise account settings with Nosto</comment>
                            <frontend_type>button</frontend_type>
                            <frontend_model>nosto_tagging/adminhtml_system_config_account_update_button</frontend_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>1</show_in_store>
                        </update>
                        <currency_formats translate="label">
                            <label>Currency Formats</label>
                            <comment>Preview of the current currency formats extracted from Magento. These can be synced to Nosto by clicking the "Update Now" button above. Syncing is only needed if the formats have changed in Magento since Nosto was installed.</comment>
                            <frontend_type>text</frontend_type>
                            <frontend_model>nosto_tagging/adminhtml_system_config_account_currency_formats</frontend_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>1</show_in_store>
                        </currency_formats>
                    </fields>
                </account_settings>
                <image_options translate="label">
                    <label>Image Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>0</expanded>
                    <fields>
                        <image_version translate="label">
                            <label>Image Version</label>
                            <frontend_type>select</frontend_type>
                            <source_model>nosto_tagging/system_config_source_image</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </image_version>
                    </fields>
                </image_options>
                <multi_currency translate="label">
                    <label>Multi Currency</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>40</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>0</expanded>
                    <fields>
                        <method translate="label">
                            <label>Multi Currency Method</label>
                            <comment>Use either exchange rates or price variations for multi currency product recommendations.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>nosto_tagging/system_config_source_multi_currency_method</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </method>
                        <update_exchange_rates translate="label">
                            <label>Update Exchange Rates</label>
                            <comment>Push exchange rates to Nosto</comment>
                            <frontend_type>button</frontend_type>
                            <frontend_model>nosto_tagging/adminhtml_system_config_multi_currency_exchange_rate_button</frontend_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>1</show_in_store>
                        </update_exchange_rates>
                    </fields>
                </multi_currency>
                <scheduled_currency_exchange_rate_update translate="label">
                    <label>Scheduled Currency Exchange Rate Update</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>50</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>0</expanded>
                    <fields>
                        <enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enabled>
                        <time translate="label">
                            <label>Start Time</label>
                            <comment>The start time is entered in the default timezone configured for the installation.</comment>
                            <frontend_type>time</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </time>
                        <frequency translate="label">
                            <label>Frequency</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_cron_frequency</source_model>
                            <backend_model>nosto_tagging/system_config_backend_currency_exchange_rate_cron</backend_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </frequency>
                    </fields>
                </scheduled_currency_exchange_rate_update>
            </groups>
        </nosto_tagging>
    </sections>
</config>
